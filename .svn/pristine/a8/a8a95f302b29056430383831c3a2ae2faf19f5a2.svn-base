<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/formclient_row_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF666666" />

        <TextView
            android:id="@+id/formclient_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_time_block"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:paddingBottom="4.0dip"
            android:text="l发生的发生地方"
            android:textColor="#FF666666" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="3.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="3.0dip" >

        <cn.hi.eim.view.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/from_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/head_default_round"
            app:border_color="#FFFFFFFF"
            app:border_width="1dp" />

        <TextView
            android:id="@+id/formclient_row_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/from_head"
            android:background="@drawable/balloon_r"
            android:gravity="center_vertical"
            android:textColor="#FF000000"
            android:text="啦啦啦啦"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>