<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_send_number_info"
        style="@style/NorMalGreyText_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/authcode_send" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edit_balck"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_authcode"
                style="@style/edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="numberSigned"
                android:maxLines="1" >
            </EditText>

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_clear"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/count_down"
            style="@style/AuthcodeAgainText"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:enabled="false"
            android:layout_weight="1"
            android:background="@drawable/sel_regiest_next"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/authcode_get_again" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        style="@style/RegiestNextText"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:background="@drawable/sel_regiest_next"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="@string/ybr_next" />

</LinearLayout>