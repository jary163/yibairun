<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray4"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp" >

    <ImageView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_company" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_balck"
        android:gravity="center_vertical" >

        <EditText
            style="@style/edit_style"
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_nunber"
            android:inputType="numberSigned"
            android:maxLines="1" >
        </EditText>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_clear"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edit_balck"
        android:gravity="center_vertical" >

        <EditText
            style="@style/edit_style"
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="text"
            android:hint="@string/login_password"
            android:maxLines="1"
            android:password="true" >
        </EditText>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_clear"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        style="@style/ProductDetailYieldText"
        android:textColor="@color/gray7"
        android:id="@+id/tv_login"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
            android:background="@drawable/sel_regiest_next"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:enabled="false"
        android:paddingTop="3dp"
        android:text="@string/login" />

    <TextView
        style="@style/ProductDetailInfoStyleOne"
        android:id="@+id/tv_regiest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="@string/regiest" />

</LinearLayout>