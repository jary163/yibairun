<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray4"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edit_balck"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_new_password"
                style="@style/edit_password_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_new_password"
                android:inputType="textPassword" >
            </EditText>
        </LinearLayout>

        <TextView
            style="@style/NorMalGreyText_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/input_password_warn" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edit_balck"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_again_new_password"
                style="@style/edit_password_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_new_password_again"
                android:inputType="textPassword" >
            </EditText>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_submit"
            style="@style/RegiestNextText"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sel_regiest_next"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/ybr_next" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/cherish/Documents/yibairun/yibairun/res/layout/activity_modify_trade_password.xml -->