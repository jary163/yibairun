<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_product_sell" />

        <TextView
            android:id="@+id/tv_plan_info"
            style="@style/NorMalBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="青岛喜来乐欢送基金计划" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_year_income"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red2"
        android:descendantFocusability="beforeDescendants"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <TextView
            style="@style/NorMalWhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="年化收益" />

        <LinearLayout
            android:id="@+id/ll_nuber_percent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_border_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_nuber_percent"
            android:background="@drawable/product_26" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <LinearLayout
                android:id="@+id/layout_limits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_limit_day"
                        style="@style/ProductDayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="365" />

                    <TextView
                        android:id="@+id/tv_limit_day_unit"
                        style="@style/NorMalWhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="天" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/product_26" />

                <TextView
                    style="@style/NorMalWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="产品期限" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/layout_limits"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_buys"
                        style="@style/ProductDayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99999"
                        android:textSize="19sp" />

                    <TextView
                        style="@style/NorMalWhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="人" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/product_26" />

                <TextView
                    style="@style/NorMalWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="购买人数" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_outof_day"
                        style="@style/ProductDayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35" />

                    <TextView
                        android:id="@+id/tv_outof_day_unit"
                        style="@style/NorMalWhiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="天" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/product_26" />

                <TextView
                    style="@style/NorMalWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="剩余时间" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/cherish/Documents/yibairun/yibairun/res/layout/list_item_product.xml -->