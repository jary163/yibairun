<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" >

        <TextView
            style="@style/SettingAboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/setting_push" />

        <ToggleButton
            android:id="@+id/tb_push_setting"
            style="@style/toggle_button"
            android:layout_alignParentRight="true"
            android:background="@null" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray12" />

    <TextView
        android:id="@+id/tv_morning"
        style="@style/SettingAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/btn_push_selector"
        android:drawablePadding="8dp"
        android:text="@string/setting_push_morning" />

    <TextView
        android:id="@+id/tv_afternoon"
        style="@style/SettingAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/btn_push_selector"
        android:drawablePadding="8dp"
        android:text="@string/setting_push_afternoon" />

    <TextView
        android:id="@+id/tv_evening"
        style="@style/SettingAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/btn_push_selector"
        android:drawablePadding="8dp"
        android:text="@string/setting_push_evening" />

</LinearLayout><!-- From: file:/Users/cherish/Documents/yibairun/yibairun/res/layout/activity_setting_push.xml -->