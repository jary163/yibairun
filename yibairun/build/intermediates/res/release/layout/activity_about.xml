<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray4" >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="fill_parent"
		android:layout_marginLeft="100dp"
		android:layout_marginRight="100dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_setting_about" />

    <TextView
        style="@style/SettingAboutText"
        android:id="@+id/versionCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/about_version" />

    <TextView
        android:id="@+id/tv_authority"
        style="@style/AuthorityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:maxLines="1"
        android:text="@string/about_authority" />

    <LinearLayout
        android:id="@+id/ll_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_authority"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/SettingAboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_website" />

        <TextView
            style="@style/AboutWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_website_info" />
    </LinearLayout>

    <TextView
        style="@style/SettingAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_website"
        android:layout_centerHorizontal="true"
        android:text="@string/about_number" />

</RelativeLayout><!-- From: file:/Users/cherish/Documents/yibairun/yibairun/res/layout/activity_about.xml -->