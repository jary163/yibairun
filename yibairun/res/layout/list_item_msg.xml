<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ybr="http://blog.csdn.net/Justin_Dong1122"  
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:ignore="ResAuto" >

    <LinearLayout
        android:id="@+id/ll_left_head"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_head_line"
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:background="@color/gray9" />

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/bg_person_msg_head" />

        <ImageView
            android:id="@+id/tv_line_bottom"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/gray9" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:id="@+id/ll_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="19dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp" >

            <com.yibairun.ui.components.AutoComposingTextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_first"
               	ybr:textSize="15"  
                ybr:textColor="@color/gray5"
                ybr:lineSpacing="0.95"
            />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray11"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@id/ll_msg"
            android:background="@drawable/ic_left_arrow" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/NorMalGreyText_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:text="4月6日8:20" />
    </RelativeLayout>

</LinearLayout>