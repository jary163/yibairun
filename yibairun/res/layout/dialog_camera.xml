<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_camera"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        style="@style/AboutWebsite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp"
        android:paddingLeft="15dp"
        android:paddingTop="9dp"
        android:text="@string/camera_upload_pic"
        android:textColor="@color/red7"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/red7" />

    <TextView
        android:id="@+id/tv_phone_pic"
        style="@style/AboutWebsite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp"
        android:paddingLeft="15dp"
        android:paddingTop="9dp"
        android:text="@string/camera_phone_pic"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_dcim"
        style="@style/AboutWebsite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp"
        android:paddingLeft="15dp"
        android:paddingTop="9dp"
        android:text="@string/camera_dcim"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>